class Solution {
    public int removeDuplicates(int[] nums) {
        int len=nums.length;
        int expnums[]=new int[len];
        expnums[0]=nums[0];
        int temp=nums[0],count=0,j=1;
        for(int i=1;i<len;i++)
        {
            if(temp==nums[i])
                {
                    count++;
                }
                else
                {
                    expnums[j]=nums[i];
                    temp=nums[i];
                    j++;
                }
        }
        for(int i=0;i<len;i++)
        {
            if(i<len-count)
            {
                nums[i]=expnums[i];
            }
            else
            {
                nums[i]=-1;
            }
        }
        return len-count;
    }
}
-----------------------------------------------------------------------------------------------------------------------------------------------------------------
2nd solution:TIMECOMPLEXITY:O(N) and SPACECOMPLEXITY:O(N)
class Solution {
    public int removeDuplicates(int[] nums) {
        int len=nums.length;
        int lastcheck=0,count=0,j=1;
        for(int i=1;i<len;i++)
        {
            if(nums[lastcheck]==nums[i])
                {
                    nums[i]=789;
                    count++;
                }
                else
                {
                   lastcheck=i;
                }
        }
        int lastswap=0;
        for(int i=0;i<len;i++)
        {
            if(nums[i]!=789 && lastswap<(len-count))
            {
                nums[lastswap]=nums[i];
                lastswap++;
                
            }
            else
            {
                continue;
            }
        }
    return len-count;
    }
}
-------------------------------------------------------------------------------------------------------------------------------------------------------------------
FINAL OPTIMAL:
class Solution {
    public int removeDuplicates(int[] nums) {
        if(nums.length==0) return 0;
        int len=nums.length;
        int j=1;
        for(int i=1;i<len;i++)
        {
            if(nums[i-1]!=nums[i])
                {
                    nums[j]=nums[i];
                    j++;
                }
        }
    return j;
    }
}
